<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Flight Management</h2>
  <a href="/admin/flights/add" class="btn btn-success">Add Flight</a>
</div>

<table class="table table-striped table-hover">
  <thead class="table">
    <tr>
      <th>Flight No.</th>
      <th>Airline</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Aircraft</th>
      <th>Seats</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each flights}}
      <tr>
        <td>{{this.flightNo}}</td>
        <td>{{this.airline}}</td>
        <td>{{this.origin}}</td>
        <td>{{this.destination}}</td>
        <td>{{formatDateTime this.departureTime}}</td>
        <td>{{formatDateTime this.arrivalTime}}</td>
        <td>{{this.aircraftType}}</td>
        <td>{{this.seatCapacity}}</td>
        <td>â‚±{{this.price}}</td>
        <td>
          <a href="/admin/flights/edit/{{this._id}}" class="btn btn-sm btn-warning">Edit</a>
          
          <a href="/admin/flights/delete/{{this._id}}" 
             class="btn btn-sm btn-danger" 
             onclick="return confirm('Are you sure you want to delete flight {{this.flightNo}}?');">
             Delete
          </a>
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="10" class="text-center">No flights found.</td>
      </tr>
    {{/each}}
  </tbody>
</table>
