<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .seat {
      width: 50px;
      height: 40px;
      line-height: 40px;
      text-align: center;
      border: 1px solid #ccc;
      border-radius: 5px;
      cursor: pointer;
      user-select: none;
    }
    .seat:hover {
      background-color: #e9ecef;
    }
    .seat.selected {
      background-color: #198754;
      color: white;
      border-color: #198754;
    }
    .spacing {
      width: 40px;
      display: inline-block;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">CCS Airlines</a>

      <div class="ms-auto">

        {{!-- If logged in (userId exists) --}}
        {{#if userId}}

          {{!-- Admin navbar --}}
          {{#if isAdmin}}
            <a class="btn btn-outline-light" href="/admin/flights?userId={{userId}}">Manage Flights</a>
            <a class="btn btn-outline-light" href="/admin/users?userId={{userId}}">Manage Users</a>
            <a class="btn btn-outline-light" href="/profile?userId={{userId}}">Profile</a>

          {{!-- Passenger navbar --}}
          {{else}}
            <a class="btn btn-outline-light" href="/flights/search?userId={{userId}}">Search Flights</a>
            <a class="btn btn-outline-light" href="/reservations/list?userId={{userId}}">My Reservations</a>
            <a class="btn btn-outline-light" href="/profile?userId={{userId}}">Profile</a>
          {{/if}}

          <a class="btn btn-outline-danger" href="/login">Logout</a>

        {{!-- Not logged in --}}
        {{else}}
          <a class="btn btn-outline-light" href="/login">Login</a>
          <a class="btn btn-outline-light" href="/register">Register</a>
        {{/if}}

      </div>
    </div>
  </nav>

  <div class="container mt-4">
    {{{body}}}
  </div>
</body>
</html>